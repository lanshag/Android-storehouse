<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:gravity="center_horizontal"
    android:orientation="vertical"
 >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/Tv_system_1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#AFEDF5"
        android:gravity="center"
        android:text="系统设置"
        android:textColor="#000000"
        android:textSize="20sp"
        >
    </TextView>

    <Button
        android:id="@+id/btn_system_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#AFEDF5"
        android:drawableLeft="@drawable/ic_left_back"
        ></Button>
</RelativeLayout>

       <Button
            android:id="@+id/btn_system_1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="  个人信息 "
            android:gravity="fill_vertical"
            android:background="#E2E2E2"
            android:drawableEnd="@drawable/right_back2"
            >
        </Button>

    <Button
        android:id="@+id/btn_system_2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/Tv_system_1"
        android:layout_marginTop="10dp"
        android:background="#E2E2E2"
        android:gravity="fill_vertical"
        android:text="  修改密码"
        android:drawableEnd="@drawable/right_back2"

        ></Button>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        >
    <Button
        android:id="@+id/btn_system_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Tv_system_1"
        android:background="#E2E2E2"
        android:gravity="fill_vertical"
        android:text="  欢迎导航"
        android:drawableEnd="@drawable/right_back2"
        ></Button>
</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        >
        <Button
            android:id="@+id/btn_system_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btn_system_3"
            android:background="#E2E2E2"
            android:gravity="fill_vertical"
            android:text="  检查版本更新"
            android:onClick="showToast"
            android:drawableEnd="@drawable/right_back2"
            ></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        >
        <Button
            android:id="@+id/btn_system_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btn_system_3"
            android:background="#E2E2E2"
            android:gravity="fill_vertical"
            android:text="  备忘录"
            android:drawableEnd="@drawable/right_back2"
            ></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/btn_system_4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/Tv_system_1"
        android:background="#E2E2E2"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="  版本号"
            android:gravity="fill_vertical"
            ></TextView>
        <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        >
        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="1.2.1"
            android:gravity="center"
            ></TextView>
    </RelativeLayout>
    </RelativeLayout>
    </LinearLayout>
    </LinearLayout>