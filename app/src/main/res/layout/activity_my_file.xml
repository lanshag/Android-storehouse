<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/my_file_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorGrayDrak"
        >
        <ImageView
            android:id="@+id/my_file_left"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_left_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:onClick="onClick"
            />

        <TextView
            android:id="@+id/memorandum_text"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105dp"
            android:layout_toRightOf="@+id/memorandum_left"
            android:text="我的文件夹"
            android:textColor="#000"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/memorandum_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/memorandum_text"
            android:background="@drawable/edit"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="onClick"
            />

    </RelativeLayout>

    <ListView
        android:id="@+id/list1"
        android:layout_below="@+id/my_file_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="10dp">
    </ListView>

</RelativeLayout>