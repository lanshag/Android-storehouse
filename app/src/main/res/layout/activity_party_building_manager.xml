<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:orientation="horizontal"
       >
      <TextView
          android:id="@+id/DJ_manage"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:background="#AFEDF5"
          android:gravity="center"
          android:text="党建"
          android:textColor="#000000"
          android:textSize="20sp"
          >
      </TextView>

      <Button
          android:id="@+id/DJ_manage_back"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:background="#AFEDF5"
          android:drawableLeft="@drawable/ic_left_back"
          ></Button>
   </RelativeLayout>

   <Button
       android:id="@+id/btn_djmanage_1"
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:layout_marginTop="20dp"
       android:background="#E2E2E2"
       android:drawableEnd="@drawable/right_back2"
       android:gravity="fill_vertical"
       android:text="  党建新闻"></Button>

   <Button
    android:id="@+id/btn_djmanage_2"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_below="@+id/Tv_system_1"
    android:layout_marginTop="10dp"
    android:background="#E2E2E2"
    android:gravity="fill_vertical"
    android:text="  党员学习"
    android:drawableEnd="@drawable/right_back2"

    ></Button>

   <Button
       android:id="@+id/btn_djmanage_3"
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:layout_below="@+id/Tv_system_1"
       android:layout_marginTop="10dp"
       android:background="#E2E2E2"
       android:gravity="fill_vertical"
       android:text="  党员活动"
       android:drawableEnd="@drawable/right_back2"

       ></Button>

   <Button
       android:id="@+id/btn_djmanage_4"
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:layout_below="@+id/Tv_system_1"
       android:layout_marginTop="10dp"
       android:background="#E2E2E2"
       android:gravity="fill_vertical"
       android:text="  扶贫工作"
       android:drawableEnd="@drawable/right_back2"

       ></Button>

   <Button
       android:id="@+id/btn_djmanage_5"
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:layout_below="@+id/Tv_system_1"
       android:layout_marginTop="10dp"
       android:background="#E2E2E2"
       android:gravity="fill_vertical"
       android:text="  党员信息"
       android:drawableEnd="@drawable/right_back2"

       ></Button>

   <EditText
       android:id="@+id/et_01"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:hint="学号"
       android:ems="10"
       android:inputType="textPersonName"
       />
   <EditText
       android:id="@+id/et_02"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:ems="10"
       android:hint="学生名字"
       android:inputType="textPersonName"
       />
   <EditText
       android:id="@+id/et_03"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:ems="10"
       android:hint="密码"
       android:inputType="textPersonName"
       />
   <Button
       android:id="@+id/btn_01"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="连接数据库"
       android:onClick="connectSql"
       />


</LinearLayout>
