<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/Tv_system_1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#AFEDF5"
            android:gravity="center"
            android:text="修改个人密码"
            android:textColor="#000000"
            android:textSize="20sp"
            >
        </TextView>

        <Button
            android:id="@+id/btn_system_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#AFEDF5"
            android:drawableLeft="@drawable/ic_left_back"
            ></Button>
    </RelativeLayout>


    <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:layout_marginTop="20dp">
    <EditText
        android:id="@+id/sys_et_1"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="#C6EEEA"
        android:layout_weight="10"
        android:hint="输入密码"
        android:gravity="center">
    </EditText>
           <Button
               android:layout_width="0dp"
               android:layout_height="30dp"
               android:layout_weight="1"
               android:background="#C6EEEA"
               android:drawableEnd="@drawable/yanjing"></Button>
       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/sys_et_2"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="#C6EEEA"
                android:layout_weight="10"
                android:hint="输入新密码"
                android:gravity="center">
            </EditText>
            <Button
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="#C6EEEA"
                android:drawableEnd="@drawable/yanjing"></Button>
        </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"

            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/sys_et_3"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="#C6EEEA"
                android:layout_weight="10"
                android:hint="再次输入新密码"
                android:gravity="center">
            </EditText>
            <Button
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="#C6EEEA"
                android:drawableEnd="@drawable/yanjing"></Button>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确认修改密码"
            android:background="#C6EEEA"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:onClick="showToast"
            >
        </Button>
   </RelativeLayout>
</LinearLayout>